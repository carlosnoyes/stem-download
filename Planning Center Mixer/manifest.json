{
  "manifest_version": 3,
  "name": "Planning Center Mixer",
  "version": "1.0.0",
  "description": "Scan Planning Center Online for audio stems and mix them in a built-in mixer",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "*://services.planningcenteronline.com/*",
    "*://planningcenteronline.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://services.planningcenteronline.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Planning Center Mixer"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
